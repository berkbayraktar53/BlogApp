@model IEnumerable<BlogApp.Entities.Concrete.Comment>

<div class="comment-top">
    @if (Model.Count() > 0)
    {
        <h4>Yorumlar</h4>
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/BlogTheme/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.FullName</h5>
                    <p>
                        @item.Message
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        <h4>Hiç Yorum Yapılmamış. İlk Yorumu Sen Yap</h4>
    }
</div>