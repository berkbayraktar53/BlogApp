@model List<Article>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var article in Model)
                            {
                                <tr>
                                    <td><img src="~/BlogTheme/images/@article.Image" class="mr-2" alt="image"></td>
                                    <td>@article.Title</td>
                                    <td><label class="badge badge-gradient-success">@article.Category?.CategoryName</label></td>
                                    <td> @(((DateTime)article.Date).ToString("dd-MM-yyyy")) </td>
                                    <td> <a class="btn btn-dark" href="/Blog/Detail/@article.ArticleId">Detaylar</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>