@model IEnumerable<Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/BlogTheme/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.FullName</h5>
                <p>@item.Message</p>
            </div>
        </div>
    }
</div>